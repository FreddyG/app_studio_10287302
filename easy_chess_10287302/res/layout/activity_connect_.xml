<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@drawable/wood"
    tools:context=".Main_Menu_Activity" >

    <Button
        android:id="@+id/local"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="TRUE"
        android:layout_alignParentTop="true"

        android:layout_marginTop="24dp"
        android:background="@drawable/white"
        android:onClick="local"
        android:text="Local" />

    <Button
        android:id="@+id/bluetooth"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_below="@+id/local"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@+id/local"
        android:background="@drawable/black"
        android:textColor="#F0FFFF"
        android:onClick="bluetooth"
        android:text="Bluetooth" />

    <Button
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_below="@+id/bluetooth"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@+id/bluetooth"
        android:background="@drawable/white"
        android:onClick="back"
        android:text="Back" />


    
</RelativeLayout>