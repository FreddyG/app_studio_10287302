<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="#D0A020"
    tools:context=".Main_Menu_Activity" >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EasyChess"
        android:layout_centerHorizontal="TRUE"
        android:id="@+id/titel"
        android:textSize="40sp" />
    
    <Button
        android:id="@+id/connect"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/titel"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="TRUE"

        android:background="@drawable/white"
        android:onClick="connect"
        android:text="Connect" />
    
    <Button
        android:id="@+id/preferences"
        android:layout_width="100dp"
        android:layout_height="70dp"

        android:layout_below="@+id/connect"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@+id/connect"
        android:background="@drawable/black"
        android:onClick="preferences"
        android:text="Preferences"
        android:textColor="#F0FFFF"
         />

    <Button
        android:id="@+id/my_account"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/preferences"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@+id/connect"
        android:background="@drawable/white"
        android:onClick="my_account"
        android:text="My account"
         />

    

    <Button
        android:id="@+id/quit"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/connect"
        android:layout_below="@+id/my_account"
        android:layout_marginTop="25dp"
        android:background="@drawable/black"
        android:textColor="#F0FFFF"
        android:onClick="quit"
        
        android:text="Quit" />

    
    
</RelativeLayout>